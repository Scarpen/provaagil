<%= simple_form_for(@profissional) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :nome %>
    <%= f.input :email %>
    <%= f.input :cpf %>
    <%= f.input :endereco %>
    <%= f.input :telefone %>
    <%= f.association :papel, label_method: :nome, value_method: :id,  include_blank: false%>
    <%= f.association :equipe, label_method: :nome, value_method: :id,  include_blank: false%>

  </div>

  <div class="form-actions">
    <%= f.button :submit, "Enviar", class: "btn btn-success" %>
  </div>
<% end %>
